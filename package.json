{
  "name": "rehype-slots",
  "repository": "marekweb/rehype-slots",
  "license": "MIT",
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "check": "npm run check:lint && npm run check:format",
    "check:lint": "eslint .",
    "check:format": "prettier --check '**/*.{js,ts,md,yml}'",
    "fix": "npm run fix:lint && npm run fix:format",
    "fix:lint": "eslint --fix .",
    "fix:format": "prettier --write '**/*.{js,ts,md,yml}'",
    "build": "npm run build:types && npm run build:bundle",
    "build:types": "tsc --build",
    "build:bundle": "esbuild rehype-slots/rehype-slots.ts --bundle --platform=neutral \"--external:./node_modules/*\" --outfile=dist/rehype-slots/rehype-slots.js",
    "test": "node --import tsx --test '**/*.test.ts'"
  },
  "exports": "./dist/rehype-slots/rehype-slots.js",
  "files": [
    "dist/rehype-slots"
  ],
  "types": "./dist/rehype-slots/rehype-slots.d.ts",
  "prettier": {
    "proseWrap": "always"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "esbuild": "^0.20.0",
    "hastscript": "^9.0.0",
    "prettier": "^3.2.5",
    "rehype-format": "^5.0.0",
    "rehype-parse": "^9.0.0",
    "rehype-stringify": "^10.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "unified": "^11.0.4"
  },
  "dependencies": {
    "unist-util-visit": "^5.0.0"
  }
}
